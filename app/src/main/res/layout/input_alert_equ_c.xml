<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogCard">

    <LinearLayout style="@style/DialogLinear">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/DialogTitle"/>

        <EditText
            android:id="@+id/input_1"
            style="@style/EditText"
            android:hint="@string/input_1_equ_c"/>

        <EditText
            android:id="@+id/input_2"
            style="@style/EditText"
            android:hint="@string/input_2_equ_c"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="end"
                      android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_cancelButton"
                style="@style/Button.Cancel"/>

            <Button
                android:id="@+id/dialog_okButton"
                style="@style/Button.OK"/>

            <Button
                android:id="@+id/dialog_changeButton"
                android:visibility="gone"
                style="@style/Button.Change"/>

            <Button
                android:id="@+id/dialog_deleteButton"
                android:visibility="gone"
                style="@style/Button.Delete"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>