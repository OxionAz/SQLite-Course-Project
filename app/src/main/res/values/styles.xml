<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor" tools:targetApi="lollipop">true</item>
    </style>
    <!-- Alert dialog -->
    <style name="DialogCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="cardCornerRadius">@dimen/small_radius</item>
    </style>
    <style name="DialogLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/alert_dialog_elevation</item>
        <item name="android:paddingLeft">@dimen/alert_dialog_elevation</item>
        <item name="android:paddingRight">@dimen/alert_dialog_elevation</item>
        <item name="android:paddingBottom">@dimen/alert_dialog_element_padding</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="DialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/element_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">@string/add_row</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_main_text</item>
    </style>
    <!-- Buttons -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/alert_dialog_button_height</item>
        <item name="android:padding">@dimen/alert_dialog_element_padding</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minWidth">@dimen/alert_dialog_button_min_width</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Button.OK">
        <item name="android:text">@string/accept_button</item>
        <item name="android:layout_marginLeft">@dimen/alert_dialog_element_padding</item>
    </style>
    <style name="Button.Cancel">
        <item name="android:text">@string/cancel_button</item>
    </style>
    <style name="Button.Change">
        <item name="android:text">@string/change_button</item>
        <item name="android:layout_marginLeft">@dimen/alert_dialog_element_padding</item>
    </style>
    <style name="Button.Delete">
        <item name="android:text">@string/delete_button</item>
        <item name="android:layout_marginLeft">@dimen/alert_dialog_element_padding</item>
    </style>
    <!-- Rows -->
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">@integer/max_length_input</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:layout_marginBottom">@dimen/border_margin</item>
    </style>
    <style name="EditText.LongText">
        <item name="android:maxLength">@integer/long_length_input</item>
    </style>
    <style name="EditText.Integer">
        <item name="android:inputType">number</item>
    </style>
</resources>
